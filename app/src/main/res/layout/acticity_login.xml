<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/login_bg"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/main_title_bar"></include>
    <ImageView
        android:layout_marginTop="25dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/default_icon"
        android:layout_gravity="center_horizontal"
        android:id="@+id/uv_head"
       />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPersonName"
        android:background="@drawable/register_user_name_bg"
        android:ems="10"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="35dp"
        android:id="@+id/et_user_name"
        android:drawableLeft="@drawable/user_name_icon"
        android:drawablePadding="25dp"
        android:gravity="center_vertical"
        android:hint="请输入姓名"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHighlight="#a3a3a3"
        android:textSize="14sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/register_psw_again_bg"
        android:ems="10"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:id="@+id/et_psw"
        android:drawableLeft="@drawable/psw_icon"
        android:drawablePadding="25dp"
        android:gravity="center_vertical"
        android:hint="请输入密码"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHighlight="#a3a3a3"
        android:textSize="14sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="登录"
        android:textColor="@android:color/white"
        android:background="@drawable/register"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/tv_register"
            android:text="立即注册"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textColorHighlight="#a3a3a3"
            android:textSize="14sp"
            android:padding="8dp"
android:gravity="center_horizontal"
           />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/tv_find_psw"
            android:text="找回密码"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textColorHighlight="#a3a3a3"
            android:textSize="14sp"
            android:padding="8dp"
            android:gravity="center_horizontal"
           />



    </LinearLayout>


</LinearLayout>
