<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    >
<include layout="@layout/main_title_bar"/>



    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/default_icon"
        android:layout_marginTop="25dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
      />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPersonName"
        android:background="@drawable/register_user_name_bg"
        android:ems="10"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="35dp"
        android:id="@+id/ed_name"
        android:drawableLeft="@drawable/user_name_icon"
        android:drawablePadding="25dp"
        android:gravity="center_vertical"
        android:hint="请输入姓名"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHighlight="#a3a3a3"
        android:textSize="14sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/register_psw_again_bg"
        android:ems="10"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:id="@+id/ed_psw"
        android:drawableLeft="@drawable/psw_icon"
        android:drawablePadding="25dp"
        android:gravity="center_vertical"
        android:hint="请输入密码"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHighlight="#a3a3a3"
        android:textSize="14sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/register_psw_again_bg"
        android:ems="10"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:id="@+id/ed_psw_conf"
        android:drawableLeft="@drawable/psw_icon"
        android:drawablePadding="25dp"
        android:gravity="center_vertical"
        android:hint="请确认输入密码"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHighlight="#a3a3a3"
        android:textSize="14sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_register"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="18sp"

        android:text="注 册"
        android:textColor="@android:color/white"
        android:background="@drawable/register"

        />
</LinearLayout>
